<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Camera2Activity">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/camerabutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="96dp"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@color/buttonbulat"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_add_a_photo_black" />

    <ImageView
        android:id="@+id/photoimgview"
        android:layout_width="match_parent"
        android:layout_height="517dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:color/darker_gray"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="26dp" />

    <TextView
        android:id="@+id/txtWaktu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtTanggal"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-157dp"
        android:textColor="@android:color/white"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/txtTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="157dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/logcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="88dp"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="@color/buttonbulat"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_attendance" />
